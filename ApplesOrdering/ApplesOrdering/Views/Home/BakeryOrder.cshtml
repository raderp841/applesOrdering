@using ApplesOrdering.Models;
@model BakeryOrderModel
@{
    ViewBag.Title = "BakeryOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UserInfoModel user = Session["User"] as UserInfoModel;
}

<h2>BakeryOrder</h2>

<form class="" action="@Url.Action("BakeryOrder", "Home")" method="post">

    <div class="form-group col-md-6">
        <label for="OrderName">Pickup Name</label>
        <input type="text" name="OrderName" class="form-control" required/>
    </div>
    <div class="form-group col-md-6">
        <label for="PhoneNumber">Phone Number</label>
        <input type="tel" name="PhoneNumber" class="form-control" required/>
    </div>
    <div class="form-group col-md-6">
        <label for="PickupTime">Pickup Time</label>
        <input type="datetime-local" name="PickupTime" class="form-control" required />
    </div>
    <div class="form-group col-md-6">
        <label for="Size">Size</label>
        <input type="text" name="Size" class="form-control"/>
    </div>
    <div class="form-group col-md-6">
        <label for="Dough">Dough Type</label>
        <input type="text" name="Dough" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label for="Icing">Icing</label>
        <input type="text" name="Icing" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label for="BorderTrim">Border and Trim</label>
        <input type="text" name="BorderTrim" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label for="MessageInfo">Message and Special Instructions</label>
        <textarea name="MessageInfo" class="form-control"></textarea>
    </div>
    <div class="form-group col-md-6">
        <label for="Kitname">Kit Name</label>
        <input type="text" name="Kitname" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label for="KitNumber">Kit Number</label>
        <input type="number" name="KitNumber" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label for="StoreId">Pickup Location</label>
        <select class="form-control" name="StoreId">
            <option value="" disabled selected>Select a Store</option>
            <option value="1">Sheffield Lake</option>
            <option value="2">Lorain</option>
            <option value="3">Sheffield Center</option>
            <option value="4">Elyria</option>
            <option value="5">Village Market</option>
            <option value="6">Wellington Apples</option>

        </select>
    </div>
    <input type="hidden" name="UserInfoId" value="@user.Id" />
    <div class="form-group col-md-12">
        <input type="submit" name="Submit" value="" />
    </div>
</form>